@model Q_A_system.Models.Quation

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Quation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Qtype" class="control-label"></label>
                <input asp-for="Qtype" class="form-control" />
                <span asp-validation-for="Qtype" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qname" class="control-label"></label>
                <textarea asp-for="Qname" class="form-control" ></textarea>
                <span asp-validation-for="Qname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserId" class="control-label"></label>
                <select asp-for="ApplicationUserId" class ="form-control" asp-items="ViewBag.ApplicationUserId" ></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
